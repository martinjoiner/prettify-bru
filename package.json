{
  "name": "prettify-bru",
  "version": "1.8.0",
  "description": "Prettifies JSON and JavaScript blocks in Bruno .bru files",
  "keywords": [
    "bruno",
    "bru",
    "prettier",
    "prettify",
    "body:json",
    "format",
    "lint"
  ],
  "homepage": "https://github.com/martinjoiner/prettify-bru#readme",
  "bugs": {
    "url": "https://github.com/martinjoiner/prettify-bru/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/martinjoiner/prettify-bru.git"
  },
  "license": "GPL-3.0-or-later",
  "author": "Martin Joiner (https://martinjoiner.co.uk)",
  "type": "module",
  "files": [
    "cli.js",
    "lib/"
  ],
  "bin": "./cli.js",
  "dependencies": {
    "jsonc-parser": "^3.3.1",
    "prettier": "^3.3.3",
    "yargs": "18.0.0"
  },
  "scripts": {
    "test": "NODE_OPTIONS=\"$NODE_OPTIONS --experimental-vm-modules\" jest --verbose",
    "prettier:check": "npx prettier --check --parser babel '**/*.mjs' '**/*.js'",
    "prettier:fix": "npx prettier --write --parser babel '**/*.mjs' '**/*.js'"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "jest": "^30.2.0"
  }
}
